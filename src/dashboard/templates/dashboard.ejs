<%- include("partials/head", {bot, user, path, title: "Chaotic- Dashboard" }) %>
<div class="content">
  <h2>SELECT A SERVER</h2>
  <style>
    .glow {
      width: 100vw;
      height: 60px;
      background: linear-gradient(90deg, #dd4949, #5e40e4);
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      border-radius: 50%;
      transform: translateY(-20%);
      filter: blur(160px);
      z-index: -1;
    }

    body {
      background: linear-gradient(to right, #1c1c1d, #182848);
      font-family: Arial, sans-serif;
      color: #ffffff;
    }
  </style>
  <div class="glow"></div>
  <% if (!userExists) { %>
  <div style="
      width: 512px;
      padding: 16px;
      margin: 8px;
      background-color: rgba(77, 77, 255, 0.05);
    ">
    <h3 style="
        color: #4d4dff;
        margin-top: 0;
        margin-bottom: 8px;
        font-size: 18px;
        font-family: 'Poppins', sans-serif;
      ">
      Hey <%= user.username%>!
    </h3>
    <p style="
        margin: 0;
        font-size: 14px;
        font-family: 'Open Sans', sans-serif;
        color: #555;
      ">
      Looks like you aren't in Pogy's Support Server.
      <a href="/support">Join Here!</a>
    </p>
  </div>
  <% } %>

  <div class="servers">
    <% user.guilds.forEach(server => { });%>
      <div class="server">
        <div class="icon-and-name">

        </div>
      </div>
  </div>
  
    
    <button class="export-button" onclick="exportServers()">Export Servers</button>
  </div>
  <a href="#" id="export-link">Download Server List</a>

  <script>
    function exportServers() {
      const servers = document.querySelectorAll(".server");
      const serverList = [];
      servers.forEach(server => {
        serverList.push(server.querySelector(".guild-name").innerText);
      });
      const blob = new Blob([JSON.stringify(serverList)], {
        type: "text/plain;charset=utf-8"
      });
      const link = document.getElementById("export-link");
      link.href = URL.createObjectURL(blob);
      link.download = "server-list.txt";
      link.click();
    }
      
  </script>
  <style>
    @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap");
    @import url("https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&display=swap");
  </style>
</div>
